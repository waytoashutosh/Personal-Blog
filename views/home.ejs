<%- include('partials/header') %>

    <h1>Home</h1>
    <p class="just"><%= startContent %></p>

    <br>

    <% contentArray.forEach(function (myobj) {%>
        <h1><%=myobj.Title%></h1>

        <% if(myobj.Content.length <100){ %>
            <p class="just"><%=myobj.Content%></p>
        <%}else{%>
            <p class="just"><%=myobj.Content.substr(0,400)%>...  <a href="/posts/<%=myobj.Title%>" class="btn btn-outline-dark" style="float: right">Read More</a></p>
        <%}%>
        
       
    <%})%>

<%- include('partials/footer') %>